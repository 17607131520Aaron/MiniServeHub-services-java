# 测试环境变量配置（本地开发默认环境）
# 复制此文件为 .env 并修改相应的值

# 服务器配置
SERVER_PORT=8080
TOMCAT_MAX_THREADS=200
TOMCAT_MIN_THREADS=10
TOMCAT_ACCEPT_COUNT=100
TOMCAT_MAX_CONNECTIONS=8192

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=MiniServeHub-services-test
DB_USERNAME=root
DB_PASSWORD=123456789
DB_SSL=false
DB_ALLOW_PUBLIC_KEY=true

# Druid连接池配置
DRUID_INITIAL_SIZE=10
DRUID_MIN_IDLE=10
DRUID_MAX_ACTIVE=50
DRUID_MAX_WAIT=60000
DRUID_EVICTION_RUNS=60000
DRUID_MIN_EVICTABLE=300000
DRUID_MAX_EVICTABLE=900000
DRUID_SLOW_SQL_MILLIS=3000

# Druid监控配置
DRUID_USERNAME=admin
DRUID_PASSWORD=123456
DRUID_ENABLED=true
DRUID_ALLOW_IPS=127.0.0.1,10.0.0.0/8

# JPA配置
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true
JPA_USE_COMMENTS=true
JPA_BATCH_SIZE=50
JPA_ORDER_INSERTS=true
JPA_ORDER_UPDATES=true

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=10000ms
REDIS_MAX_ACTIVE=16
REDIS_MAX_WAIT=-1ms
REDIS_MAX_IDLE=8
REDIS_MIN_IDLE=2
REDIS_CLUSTER_ADAPTIVE=false
REDIS_CLUSTER_PERIOD=30s

# 缓存配置
CACHE_TTL=1800000

# 日志配置
LOG_LEVEL_MINISERVEHUB=DEBUG
LOG_LEVEL_WEB=INFO
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_SQL_BINDER=TRACE
LOG_LEVEL_CACHE=DEBUG
LOG_LEVEL_SECURITY=WARN
LOG_FILE_NAME=logs/miniservehub-test.log
LOG_MAX_FILE_SIZE=50MB
LOG_MAX_HISTORY=7
LOG_TOTAL_SIZE_CAP=1GB

# JWT配置
JWT_SECRET=MiniServeHub2024SecretKeyForJWTTokenGenerationAndValidation
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800

# 监控配置
MANAGEMENT_ENDPOINTS=health,info,metrics,prometheus
MANAGEMENT_BASE_PATH=/actuator
MANAGEMENT_HEALTH_DETAILS=always
MANAGEMENT_PORT=9090

# 业务配置
MINISERVEHUB_ENV=test
MINISERVEHUB_DEBUG=true
MINISERVEHUB_CACHE_TTL=600
MINISERVEHUB_CORS=true

# 应用配置
SPRING_PROFILES_ACTIVE=test
