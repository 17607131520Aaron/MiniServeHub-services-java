# 生产环境变量配置
# 复制此文件为 .env 并修改相应的值
# ⚠️ 生产环境请使用强密码和安全配置

# 服务器配置
SERVER_PORT=8080
TOMCAT_MAX_THREADS=300
TOMCAT_MIN_THREADS=20
TOMCAT_ACCEPT_COUNT=100
TOMCAT_MAX_CONNECTIONS=8192

# 数据库配置
DB_HOST=prod-db.miniservehub.com
DB_PORT=3306
DB_NAME=miniservehub_prod
DB_USERNAME=miniservehub_prod
DB_PASSWORD=your_secure_prod_db_password
DB_SSL=true
DB_ALLOW_PUBLIC_KEY=false

# Druid连接池配置
DRUID_INITIAL_SIZE=20
DRUID_MIN_IDLE=20
DRUID_MAX_ACTIVE=100
DRUID_MAX_WAIT=60000
DRUID_EVICTION_RUNS=60000
DRUID_MIN_EVICTABLE=300000
DRUID_MAX_EVICTABLE=900000
DRUID_SLOW_SQL_MILLIS=1000

# Druid监控配置
DRUID_USERNAME=admin
DRUID_PASSWORD=your_very_secure_druid_password
DRUID_ENABLED=false
DRUID_ALLOW_IPS=127.0.0.1

# JPA配置
JPA_DDL_AUTO=none
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false
JPA_USE_COMMENTS=false
JPA_BATCH_SIZE=50
JPA_ORDER_INSERTS=true
JPA_ORDER_UPDATES=true

# Redis配置
REDIS_HOST=prod-redis.miniservehub.com
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_prod_redis_password
REDIS_DATABASE=0
REDIS_TIMEOUT=10000ms
REDIS_MAX_ACTIVE=64
REDIS_MAX_WAIT=-1ms
REDIS_MAX_IDLE=32
REDIS_MIN_IDLE=8
REDIS_CLUSTER_ADAPTIVE=true
REDIS_CLUSTER_PERIOD=30s

# 缓存配置
CACHE_TTL=7200000

# 日志配置
LOG_LEVEL_MINISERVEHUB=WARN
LOG_LEVEL_WEB=ERROR
LOG_LEVEL_SQL=ERROR
LOG_LEVEL_SQL_BINDER=ERROR
LOG_LEVEL_CACHE=ERROR
LOG_LEVEL_SECURITY=WARN
LOG_FILE_NAME=logs/miniservehub-prod.log
LOG_MAX_FILE_SIZE=200MB
LOG_MAX_HISTORY=30
LOG_TOTAL_SIZE_CAP=5GB

# JWT配置
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_at_least_256_bits
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800

# 监控配置
MANAGEMENT_ENDPOINTS=health,info,prometheus
MANAGEMENT_BASE_PATH=/actuator
MANAGEMENT_HEALTH_DETAILS=never
MANAGEMENT_PORT=9090

# 业务配置
MINISERVEHUB_ENV=prod
MINISERVEHUB_DEBUG=false
MINISERVEHUB_CACHE_TTL=7200
MINISERVEHUB_CORS=false

# 应用配置
SPRING_PROFILES_ACTIVE=prod
